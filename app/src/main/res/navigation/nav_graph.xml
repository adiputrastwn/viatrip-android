<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.adiputrastwn.viatrip.ui.home.HomeFragment"
        android:label="@string/home_fragment_label"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/showDetailTrip"
            app:destination="@id/DetailTripFragment" />
    </fragment>
    <fragment
        android:id="@+id/DetailTripFragment"
        android:name="com.adiputrastwn.viatrip.ui.tripdetail.DetailTripFragment"
        android:label="@string/detail_trip_fragment_label"
        tools:layout="@layout/fragment_detail_trip">

        <action
            android:id="@+id/showHomeScreen"
            app:destination="@id/HomeFragment" />
    </fragment>
</navigation>